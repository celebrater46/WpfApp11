        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- <Grid> -->
    <StackPanel>
        <TextBox x:Name="nameText" HorizontalAlignment="Left" Width="120" Margin="5,5" />
        <TextBox x:Name="ageText" HorizontalAlignment="Left" Width="40" Margin="5, 5" />
        <Calendar x:Name="cal" HorizontalAlignment="Left" Margin="5, 5" />
        <TextBox x:Name="memoText" HorizontalAlignment="Left" Width="170" Height="60" Margin="5, 5" />
    </StackPanel>
    <!-- </Grid> -->
</Window>
